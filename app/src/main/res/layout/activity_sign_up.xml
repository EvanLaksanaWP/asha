<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sign.SignUpActivity"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_signup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginStart="48dp"
        android:text="Hello Kind Person!"
        android:fontFamily="@font/red_rose"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="@color/darker_purple"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_signup_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Letâ€™s get to know each other, \nplease fill in a few details below"
        android:fontFamily="@font/red_rose"
        android:textColor="@color/silver"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/tv_signup_title"
        app:layout_constraintTop_toBottomOf="@id/tv_signup_title"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Name"
        android:fontFamily="@font/red_rose"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_signup_detail"
        app:layout_constraintStart_toStartOf="@id/tv_signup_detail"/>

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edt_input"
        android:paddingStart="16dp"
        android:fontFamily="@font/red_rose"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintStart_toStartOf="@id/tv_name"/>

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Email"
        android:fontFamily="@font/red_rose"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/edt_name"
        app:layout_constraintStart_toStartOf="@id/tv_name"/>

    <EditText
        android:id="@+id/edt_email"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingStart="16dp"
        android:fontFamily="@font/red_rose"
        android:layout_marginTop="4dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/edt_input"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_email"
        app:layout_constraintStart_toStartOf="@id/tv_name"/>

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Username"
        android:fontFamily="@font/red_rose"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/edt_email"
        app:layout_constraintStart_toStartOf="@id/tv_name"/>

    <EditText
        android:id="@+id/edt_username"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingStart="16dp"
        android:fontFamily="@font/red_rose"
        android:layout_marginTop="4dp"
        android:background="@drawable/edt_input"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_username"
        app:layout_constraintStart_toStartOf="@id/tv_name"/>

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Password"
        android:fontFamily="@font/red_rose"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/edt_username"
        app:layout_constraintStart_toStartOf="@id/tv_name"/>

    <EditText
        android:id="@+id/edt_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingStart="16dp"
        android:fontFamily="@font/red_rose"
        android:layout_marginTop="4dp"
        android:inputType="textVisiblePassword"
        android:background="@drawable/edt_input"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_password"
        app:layout_constraintStart_toStartOf="@id/tv_name"/>

    <TextView
        android:id="@+id/tv_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Trusted Contact"
        android:fontFamily="@font/red_rose"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/edt_password"
        app:layout_constraintStart_toStartOf="@id/tv_password"/>

    <EditText
        android:id="@+id/edt_contact"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingStart="16dp"
        android:fontFamily="@font/red_rose"
        android:layout_marginTop="4dp"
        android:inputType="number"
        android:background="@drawable/edt_input"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_contact"
        app:layout_constraintStart_toStartOf="@id/tv_name"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_signup"
        style="@style/SignButton"
        android:text="Sign Up"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/btn_purple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>