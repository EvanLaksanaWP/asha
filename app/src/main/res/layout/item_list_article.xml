<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="16dp"
    app:strokeColor="@color/black"
    app:strokeWidth="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="16dp"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_list_article_title"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="10 Things You Do If You're Being Sexually Harassed"
            android:fontFamily="@font/red_rose"
            android:maxLines="3"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_list_article_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By asha team"
            android:fontFamily="@font/red_rose"
            app:layout_constraintTop_toBottomOf="@id/tv_list_article_title"
            app:layout_constraintStart_toStartOf="@id/tv_list_article_title"/>

        <TextView
            android:id="@+id/tv_list_article_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 March 2022"
            android:fontFamily="@font/red_rose"
            app:layout_constraintTop_toBottomOf="@id/tv_list_article_title"
           app:layout_constraintEnd_toEndOf="@id/tv_list_article_title"/>

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="16dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/list_article_image"/>

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>